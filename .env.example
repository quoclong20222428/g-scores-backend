# Environment: development | production
NODE_ENV=development

# Database Configuration
# For local development, use docker-compose.dev.yaml
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE
DATABASE_URL=postgresql://postgres:password@localhost:5432/g_scores

# Redis Configuration
# For local development, use docker-compose.dev.yaml
REDIS_URL=redis://localhost:6379

# Server Port
PORT=5001

# CORS Configuration
# Comma-separated list of allowed origins
CORS_ORIGIN=http://localhost:5173

# Database Credentials (for docker-compose.dev.yaml)
DB_USER=postgres
DB_PASSWORD=password
DB_NAME=g_scores

# Seed Configuration (optional)
# Set to 'true' to force reseed database, 'false' to skip if data exists, defaults to 'false' if not set
FORCE_SEED=false
